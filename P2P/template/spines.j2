switch_role: spine

os10_system:
    hostname: {{inventory_hostname}}

os10_interface:
  loopback 0:
    admin: up
    ip_and_mask: 10.0.99.{{inventory_hostname[-1]}}/32
  ethernet 1/1/1:
    desc: "Link to Leaf1-S5248-ON ethernet1/1/{{49+((inventory_hostname[-1]| int)//2)*2}}"
    switchport: False
    admin: up
    mtu: 9216
    ip_and_mask: 10.99.1{{inventory_hostname[-1] | int}}.{{inventory_hostname[-1] | int}}{{inventory_hostname[-1] | int}}/24
  ethernet 1/1/2:
    desc: "Link to Leaf2-S5248-ON ethernet1/1/{{49+((inventory_hostname[-1]| int)//2)*2}}"
    switchport: False
    admin: up
    mtu: 9216
    ip_and_mask: 10.99.2{{inventory_hostname[-1] | int}}.{{inventory_hostname[-1] | int}}{{inventory_hostname[-1] | int}}/24
  ethernet 1/1/3:
    desc: "Link to Leaf3-S5248-ON ethernet1/1/{{49+((inventory_hostname[-1]| int)//2)*2}}"
    switchport: False
    admin: up
    mtu: 9216
    ip_and_mask: 10.99.3{{inventory_hostname[-1] | int}}.{{inventory_hostname[-1] | int}}{{inventory_hostname[-1] | int}}/24
  ethernet 1/1/4:
    desc: "Link to Leaf4-S5248-ON ethernet1/1/{{49+((inventory_hostname[-1]| int)//2)*2}}"
    switchport: False
    admin: up
    mtu: 9216
    ip_and_mask: 10.99.4{{inventory_hostname[-1] | int}}.{{inventory_hostname[-1] | int}}{{inventory_hostname[-1] | int}}/24

os10_prefix_list:
   - name: redistri-underlay
     type: ipv4
     entries:
       - number: 5
         permit: true
         net_num: 10.0.99.0
         mask: 24
         condition_list:
           - condition: ge
             prelen: 32
           - condition: le
             prelen: 32
         state: present
     state: present

os10_route_map:
  route_map:
    - name: redistri-underlay
      permit: true
      seq_num: 5
      match:
       - ip_type: ipv4
         prefix_list: redistri-underlay
      state: present

os10_bgp:
    asn: 65101
    router_id: 10.0.99.{{inventory_hostname[-1]}}
    redistribute:
      - route_type: connected
        address_type: ipv4
        route_map_name: redistri-underlay
        state: present
    neighbor:
      - type: "peergroup"
        name: "ebgp_unified"
        address_family:
          - type: ipv4
            activate: true
            sender_loop_detect: false
            state: present
        state: present
      - type: "peergroup" 
        name: "ebgp_evpn"
        ebgp_multihop: 4
        send_community:
          - type: extended
            state: present
        src_loopback: 0
        address_family:
          - type: ipv4
            activate: false
            state: present
          - type: l2vpn
            activate: true
            sender_loop_detect: false
            state: present
        state: present
      - type: ipv4
        ip: 10.99.1{{inventory_hostname[-1] | int}}.1
        remote_asn: 65111
        peergroup: ebgp_unified
        peergroup_state: present
        admin: up
        state: present
      - type: ipv4
        ip: 10.99.2{{inventory_hostname[-1] | int}}.1
        remote_asn: 65111
        peergroup: ebgp_unified
        peergroup_state: present
        admin: up
        state: present
      - type: ipv4
        ip: 10.99.3{{inventory_hostname[-1] | int}}.1
        remote_asn: 65112
        peergroup: ebgp_unified
        peergroup_state: present
        admin: up
        state: present
      - type: ipv4
        ip: 10.99.4{{inventory_hostname[-1] | int}}.1
        remote_asn: 65112
        peergroup: ebgp_unified
        peergroup_state: present
        state: present
        admin: up
      - type: ipv4
        ip: 10.0.0.1
        remote_asn: 65111
        peergroup: ebgp_evpn
        peergroup_state: present
        admin: up
        state: present
      - type: ipv4
        ip: 10.0.0.2
        remote_asn: 65111
        peergroup: ebgp_evpn
        peergroup_state: present
        state: present
        admin: up
      - type: ipv4
        ip: 10.0.0.3
        remote_asn: 65112
        peergroup: ebgp_evpn
        peergroup_state: present
        admin: up
        state: present
      - type: ipv4
        ip: 10.0.0.4
        remote_asn: 65112
        peergroup: ebgp_evpn
        peergroup_state: present
        admin: up
        state: present

os10_vxlan:
    evpn:
      state: present
